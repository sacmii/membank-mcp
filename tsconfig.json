{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    // Absolute imports configuration
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "routes/*": ["routes/*"],
      "middleware/*": ["middleware/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "config/*": ["config/*"],
      "controllers/*": ["controllers/*"],
      "services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
